<h1>Forgot your password?</h1>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: "form-horizontal width-large", method: :post}) do |f| %>
<%= f.input :email %>
<div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions", class: "btn-primary" %>
</div>
<% end %>

<%= render "users/shared/links" %>
