<h1>Sign up</h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal width-large"}) do |f| %>
<%= f.input :email %>
<%= f.input :password %>
<%= f.input :password_confirmation %>
<div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn-primary" %>
</div>
<% end %>

<%= render "users/shared/links" %>
