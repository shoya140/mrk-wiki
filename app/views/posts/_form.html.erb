<%= simple_form_for(@post, html: {class: "form-horizontal width-large"}) do |f| %>
<%= f.input :title %>
<%= f.input :category_id, collection: Category.all, label_method: :name, value_method: :id, include_blank: false%>
<%= f.input :body, as: :text%>
  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary" %>
  </div>
<% end %>
